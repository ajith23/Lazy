
@{
    ViewBag.Title = "Settings";
    Layout = "~/Views/Shared/_Master.cshtml";
}
<script src="~/scripts/custom/settings.js"></script>
<script>
    $('#pageOrientationDropdown').val(@ViewBag.PageOrientation);
</script>
<div class="row">
    <div class="col-sm-4">
        <fieldset class="form-group">
            <label for="pageSizeDropdown">Page Size</label>
            <select class="form-control" id="pageSizeDropdown">
                <option value="Letter">Letter</option>
                <option value="A4">A4</option>
                <option value="A5">A5</option>
                <option value="HalfLetter">HalfLetter</option>
            </select>
        </fieldset>
    </div>
    <div class="col-sm-4">
        <fieldset class="form-group">
            <label for="pageOrientationDropdown">Page Orientation</label>
            <select class="form-control" id="pageOrientationDropdown">
                <option value="Portrait" selected>Portrait</option>
                <option value="Landscape">Landscape</option>
            </select>
        </fieldset>
    </div>
    <div class="col-sm-4">
        <fieldset class="form-group">
            <label for="pageMarginTextBox">Page Margin</label>
            <input type="number" class="form-control" id="pageMarginTextBox" value="@ViewBag.PageMargin">
        </fieldset>
    </div>
 </div>
<div class="row">
    <div class="col-sm-12" style="text-align: right">
        @*<span class="input-group-btn">*@
            <button type="button" class="btn btn-primary" id="saveSettingsButton" title="Save Settings"><span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span> Save</button>
            <button type="button" class="btn btn-danger" id="cancelSaveSettingsButton" title="Cancel"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancel</button>
        @*</span>*@
    </div>
</div>